#include <iostream>
#include <direct.h>
#include <string>

using namespace std;

void list_file();
void directory();
void change_dir();

int main() {
    int input;

    while (true) {
    	cout << "\n";
        cout << "\tMain Menu" << endl;
        cout << "\n";

        cout << "\t1. To Display List of Files\n";
        cout << "\t2. To Create New Directory\n";
        cout << "\t3. To Change the Working Directory\n";
        cout << "\t4. Exit\n";

        cout << "Enter Number: ";
        cin >> input;

        switch (input) {
            case 1:
                list_file();
                break;

            case 2:
                directory();
                break;

            case 3:
                change_dir();
                break;

            case 4:
                return 0;

            default:
                cout << "Invalid choice. Please try again..." << endl;
        }
    }
    return 0;
}
